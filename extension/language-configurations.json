{
  "comments": {
    "lineComment": "--",
    "blockComment": ["--[[", "]]"]  
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'" }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'" }
  ],
  "wordPattern": "(-?\\d*\\.?\\d\\w*)|([^\\`\\~!@#%\\^&*()=+\\[\\]{\\}|;:'\",.<>/?\\s]+)",
  "onEnterRules": [
    {
      "beforeText": "^\\s*(if|for|while).*\bthen$",
      "afterText": "^\\s*end\b",
      "action": { "indent": "indent", "indentAction": "indent" }
    },
    {
      "beforeText": "^\\s*(function|unsafe function).*\b$",
      "afterText": "^\\s*end\b",
      "action": { "indent": "indent", "indentAction": "indent" }
    },
    {
      "beforeText": "^.*\bdo$",
      "afterText": "^\\s*end\b",
      "action": { "indent": "indent", "indentAction": "indent" }
    }
  ]
}
